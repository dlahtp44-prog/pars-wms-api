
from fastapi import APIRouter
from app.db import get_conn, upsert_item, get_item_name_by_code, normalize_lot
from app.models import InventoryTx

router = APIRouter(prefix="/api/inventory")

@router.post("/in")
def inbound(data: InventoryTx):
    conn = get_conn()
    cur = conn.cursor()

    upsert_item(data.item_code, data.item_name)
    item_name = get_item_name_by_code(data.item_code)
    lot_no = normalize_lot(data.lot_no)

    cur.execute("""
        INSERT INTO inventory_tx (tx_type, warehouse, location, item_code, item_name, lot_no, qty, remark)
        VALUES ('IN', ?, ?, ?, ?, ?, ?, ?)
    """, (data.warehouse, data.location, data.item_code, item_name, lot_no, data.qty, data.remark or "입고"))

    conn.commit()
    conn.close()
    return {"result": "OK", "msg": "입고 완료"}
